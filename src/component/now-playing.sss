.container
  width: 100%
  margin: 12px 0
  font-size: 18px
  color: #000

  & > *
    display: block
    margin: auto

  & > img
    width: 500px

    @media (max-width: 500px)
      width: 100%

  & > p
    margin-top: 0.6em
    text-align: center

    &:first-of-type
      font-size: 1.2em

    & > a
      color: inherit
      text-decoration: none
      transition: color 200ms ease

      &:hover
        color: #f09442

      & > i
        margin-left: 0.3em
